<Window x:Class="JamakolAstrology.SaveChartDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:JamakolAstrology.Resources"
        Title="{x:Static res:Strings.DialogSaveChart}"
        Height="650" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#fffff0">
    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="ComboStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/> <!-- New: Date/Time -->
            <RowDefinition Height="Auto"/> <!-- New: Location -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Name -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="{x:Static res:Strings.LabelChartName}" Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="NameInput" Style="{StaticResource InputStyle}" Text="Query"/>
        </StackPanel>

        <!-- Date / Time -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="{x:Static res:Strings.LabelDateTimeBc}" Style="{StaticResource LabelStyle}"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="YearInput" Grid.Column="0" Style="{StaticResource InputStyle}" ToolTip="Year (negative for BC)"/>
                <TextBlock Grid.Column="1" Text="/" VerticalAlignment="Center" Margin="4,0"/>
                <TextBox x:Name="MonthInput" Grid.Column="2" Style="{StaticResource InputStyle}" ToolTip="Month (1-12)"/>
                <TextBlock Grid.Column="3" Text="/" VerticalAlignment="Center" Margin="4,0"/>
                <TextBox x:Name="DayInput" Grid.Column="4" Style="{StaticResource InputStyle}" ToolTip="Day (1-31)"/>
                <TextBox x:Name="TimeInput" Grid.Column="6" Style="{StaticResource InputStyle}" ToolTip="HH:mm:ss"/>
            </Grid>
        </StackPanel>

        <!-- Location -->
        <StackPanel Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static res:Strings.LabelLocationLatLongTz}" Style="{StaticResource LabelStyle}"/>
                <Button Grid.Column="1" Content="{x:Static res:Strings.BtnSearchPlace}" FontSize="11" Padding="8,2" 
                        Click="SearchPlace_Click" Background="Transparent" BorderThickness="0"
                        Foreground="#cc0000" Cursor="Hand" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="0.6*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="LatInput" Grid.Column="0" Style="{StaticResource InputStyle}" ToolTip="Latitude"/>
                <TextBox x:Name="LongInput" Grid.Column="2" Style="{StaticResource InputStyle}" ToolTip="Longitude"/>
                <TextBox x:Name="TzInput" Grid.Column="4" Style="{StaticResource InputStyle}" ToolTip="Timezone"/>
            </Grid>
        </StackPanel>
        
        <!-- Result -->
        <StackPanel x:Name="ResultPanel" Grid.Row="3">
            <TextBlock Text="{x:Static res:Strings.LabelResult}" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="ResultCombo" Style="{StaticResource ComboStyle}">
                <ComboBoxItem Content="{x:Static res:Strings.ResultPending}" IsSelected="True"/>
                <ComboBoxItem Content="{x:Static res:Strings.ResultSuccess}"/>
                <ComboBoxItem Content="{x:Static res:Strings.ResultFailure}"/>
            </ComboBox>
        </StackPanel>
        
        <!-- Category -->
        <StackPanel Grid.Row="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static res:Strings.LabelCategory}" Style="{StaticResource LabelStyle}"/>
                <Button Grid.Column="1" Content="{x:Static res:Strings.BtnManage}" FontSize="11" Padding="8,2" 
                        Click="ManageCategories_Click" Background="Transparent" BorderThickness="0"
                        Foreground="#cc0000" Cursor="Hand" VerticalAlignment="Bottom"/>
            </Grid>
            <ComboBox x:Name="CategoryCombo" Style="{StaticResource ComboStyle}"/>
        </StackPanel>
        
        <!-- Tags -->
        <StackPanel Grid.Row="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static res:Strings.LabelTags}" Style="{StaticResource LabelStyle}"/>
                <Button Grid.Column="1" Content="{x:Static res:Strings.BtnManage}" FontSize="11" Padding="8,2" 
                        Click="ManageTags_Click" Background="Transparent" BorderThickness="0"
                        Foreground="#cc0000" Cursor="Hand" VerticalAlignment="Bottom"/>
            </Grid>
            <ListBox x:Name="TagsList" Height="60" SelectionMode="Multiple">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name}" Tag="{Binding Id}" 
                                  Checked="TagCheckBox_Changed" Unchecked="TagCheckBox_Changed"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        
        <!-- Prediction -->
        <StackPanel Grid.Row="6">
            <TextBlock Text="{x:Static res:Strings.LabelPredictionNotes}" Style="{StaticResource LabelStyle}"/>
        </StackPanel>
        <TextBox x:Name="PredictionInput" Grid.Row="7" 
                 Style="{StaticResource InputStyle}" 
                 AcceptsReturn="True" 
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 VerticalAlignment="Stretch"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="{x:Static res:Strings.BtnCancel}" Style="{StaticResource ButtonStyle}" 
                    Click="Cancel_Click" Background="#ddd" Margin="0,0,10,0"/>
            <Button Content="{x:Static res:Strings.BtnSaveUpdate}" Style="{StaticResource ButtonStyle}" 
                    Click="Save_Click" Background="#cc0000" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
