<Window x:Class="JamakolAstrology.SaveChartDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Jamakol Chart"
        Height="500" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#fffff0">
    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="ComboStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Name -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Chart Name" Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="NameInput" Style="{StaticResource InputStyle}" Text="Query"/>
        </StackPanel>
        
        <!-- Result -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Result" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="ResultCombo" Style="{StaticResource ComboStyle}">
                <ComboBoxItem Content="Pending" IsSelected="True"/>
                <ComboBoxItem Content="Success"/>
                <ComboBoxItem Content="Failure"/>
            </ComboBox>
        </StackPanel>
        
        <!-- Category -->
        <StackPanel Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Category" Style="{StaticResource LabelStyle}"/>
                <Button Grid.Column="1" Content="Manage..." FontSize="11" Padding="8,2" 
                        Click="ManageCategories_Click" Background="Transparent" BorderThickness="0"
                        Foreground="#cc0000" Cursor="Hand" VerticalAlignment="Bottom"/>
            </Grid>
            <ComboBox x:Name="CategoryCombo" Style="{StaticResource ComboStyle}"/>
        </StackPanel>
        
        <!-- Tags -->
        <StackPanel Grid.Row="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Tags" Style="{StaticResource LabelStyle}"/>
                <Button Grid.Column="1" Content="Manage..." FontSize="11" Padding="8,2" 
                        Click="ManageTags_Click" Background="Transparent" BorderThickness="0"
                        Foreground="#cc0000" Cursor="Hand" VerticalAlignment="Bottom"/>
            </Grid>
            <ListBox x:Name="TagsList" Height="60" SelectionMode="Multiple">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name}" Tag="{Binding Id}" 
                                  Checked="TagCheckBox_Changed" Unchecked="TagCheckBox_Changed"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        
        <!-- Prediction -->
        <StackPanel Grid.Row="4">
            <TextBlock Text="Prediction / Notes" Style="{StaticResource LabelStyle}"/>
        </StackPanel>
        <TextBox x:Name="PredictionInput" Grid.Row="5" 
                 Style="{StaticResource InputStyle}" 
                 AcceptsReturn="True" 
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 VerticalAlignment="Stretch"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" Style="{StaticResource ButtonStyle}" 
                    Click="Cancel_Click" Background="#ddd" Margin="0,0,10,0"/>
            <Button Content="Save Chart" Style="{StaticResource ButtonStyle}" 
                    Click="Save_Click" Background="#cc0000" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
