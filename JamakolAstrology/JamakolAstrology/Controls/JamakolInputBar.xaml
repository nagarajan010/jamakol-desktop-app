<UserControl x:Class="JamakolAstrology.Controls.JamakolInputBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <UserControl.Resources>
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#fff"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,0,5,0"/>
        </Style>
        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="#fff"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#cc0000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>
    
    <Border Background="#fff8dc" Padding="10,8" BorderBrush="#ddd" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10">
        <WrapPanel VerticalAlignment="Center">
            <TextBlock Text="Name:" Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="NameInput" Style="{StaticResource InputStyle}" Width="120" Text="Query"/>

            <TextBlock Text="Date:" Style="{StaticResource LabelStyle}"/>
            <DatePicker x:Name="DateInput" Style="{StaticResource DatePickerStyle}" Width="120"
                        SelectedDate="{x:Static sys:DateTime.Now}"/>

            <TextBlock Text="Time:" Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="TimeInput" Style="{StaticResource InputStyle}" Width="70" Text="12:00:00"/>
            <Button Content="Now" Click="NowButton_Click"
                    Margin="5,0,0,0" Padding="8,4"
                    Background="#4CAF50" Foreground="White" 
                    FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            <Button x:Name="StartStopButton" Content="Start" Click="StartStopButton_Click"
                    Margin="5,0,0,0" Padding="8,4"
                    Background="#2196F3" Foreground="White" 
                    FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>

            <TextBlock Text="Lat:" Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="LatInput" Style="{StaticResource InputStyle}" Width="65" Text="13.0827"/>

            <TextBlock Text="Long:" Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="LongInput" Style="{StaticResource InputStyle}" Width="65" Text="80.2707"/>

            <TextBlock Text="TZ:" Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="TzInput" Style="{StaticResource InputStyle}" Width="45" Text="5.5"/>

            <Button Content="Calculate" Style="{StaticResource ButtonStyle}" 
                    Click="CalculateButton_Click" Margin="15,0,0,0"/>
            
            <Button Content="ðŸ’¾ Save" Click="SaveButton_Click"
                    Margin="5,0,0,0" Padding="10,8"
                    Background="#28A745" Foreground="White" 
                    FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" FontSize="13"/>
            
            <Button Content="ðŸ“‹ Saved" Click="LoadButton_Click"
                    Margin="5,0,0,0" Padding="10,8"
                    Background="#4A90D9" Foreground="White" 
                    FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" FontSize="13"/>
                    
            <TextBlock x:Name="StatusText" Text="" Foreground="#888" 
                       FontSize="11" Margin="15,0,0,0" VerticalAlignment="Center"/>
        </WrapPanel>
    </Border>
</UserControl>
