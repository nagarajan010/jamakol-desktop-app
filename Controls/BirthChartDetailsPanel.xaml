<UserControl x:Class="JamakolAstrology.Controls.BirthChartDetailsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:JamakolAstrology.Controls"
             xmlns:res="clr-namespace:JamakolAstrology.Resources">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
        <StackPanel>
            <!-- Planetary Positions -->
            <Border Background="#fffff8" CornerRadius="5" Padding="5" Margin="0,0,0,5" BorderBrush="#ddd" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="{x:Static res:Strings.PlanetaryPositions}" FontSize="14" FontWeight="Bold" 
                               Foreground="#cc0000" Margin="0,0,0,5"/>
                    <controls:JamakolPlanetGrid x:Name="PlanetGridControl"/>
                </StackPanel>
            </Border>
            
            <!-- Bottom Details Area -->
            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Natal Details -->
                <Border Grid.Column="0" Background="#fffff8" CornerRadius="5" Padding="10" Margin="0,0,5,0" BorderBrush="#ddd" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="{x:Static res:Strings.NatalChartDetails}" FontWeight="Bold" Foreground="#990000" Margin="0,0,0,5"/>
                        <TextBlock x:Name="NatalDetailsText" FontFamily="Consolas" FontSize="12" Foreground="#333"/>
                    </StackPanel>
                </Border>
                
                <!-- Ashtakavarga -->
                <Border Grid.Column="1" Background="#fffff8" CornerRadius="5" Padding="5" Margin="5,0,0,0" BorderBrush="#ddd" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="{x:Static res:Strings.TabAshtakavarga}" FontWeight="Bold" Foreground="#990000" Margin="0,0,0,5"/>
                        <controls:AshtakavargaDetailsPanel x:Name="AshtakavargaControl" Height="300"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
