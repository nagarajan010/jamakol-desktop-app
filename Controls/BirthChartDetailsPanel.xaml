<UserControl x:Class="JamakolAstrology.Controls.BirthChartDetailsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:JamakolAstrology.Controls">
    
    <TabControl Background="Transparent" BorderThickness="0">
        <TabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border x:Name="TabBorder" Background="#e0e0e0" CornerRadius="5,5,0,0" 
                                    Padding="15,8" Margin="0,0,2,0">
                                <ContentPresenter ContentSource="Header"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="TabBorder" Property="Background" Value="#cc0000"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </TabControl.Resources>
        
        <!-- Basic Tab -->
        <TabItem Header="Basic">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                <StackPanel>
                    <!-- Planetary Positions -->
                    <Border Background="#fffff8" CornerRadius="5" Padding="5" Margin="0,0,0,5" BorderBrush="#ddd" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Planetary Positions" FontSize="14" FontWeight="Bold" 
                                       Foreground="#cc0000" Margin="0,0,0,5"/>
                            <controls:JamakolPlanetGrid x:Name="PlanetGridControl"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Bottom Details Area -->
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Natal Details -->
                        <Border Grid.Column="0" Background="#fffff8" CornerRadius="5" Padding="10" Margin="0,0,5,0" BorderBrush="#ddd" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Natal Chart Details" FontWeight="Bold" Foreground="#990000" Margin="0,0,0,5"/>
                                <TextBlock x:Name="NatalDetailsText" Text="No content available" Foreground="#aaa" FontStyle="Italic"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Ashtakavarga -->
                        <Border Grid.Column="1" Background="#fffff8" CornerRadius="5" Padding="10" Margin="5,0,0,0" BorderBrush="#ddd" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Ashtakavarga" FontWeight="Bold" Foreground="#990000" Margin="0,0,0,5"/>
                                <TextBlock x:Name="AshtakavargaText" Text="No content available" Foreground="#aaa" FontStyle="Italic"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        
        <!-- Dashas Tab -->
        <TabItem Header="Dashas">
            <Grid Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Current Dasha Highlight -->
                    <RowDefinition Height="*"/>    <!-- Dasha Tree -->
                </Grid.RowDefinitions>

                <!-- Current Dasha Highlights -->
                <Border Grid.Row="0" Background="#fff0f0" CornerRadius="5" Padding="10" Margin="0,0,0,10" BorderBrush="#ffcccc" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Currently Running" FontSize="12" FontWeight="Bold" Foreground="#990000" Margin="0,0,0,5"/>
                        <TextBlock x:Name="CurrentDashaText" Text="-" FontSize="16" FontWeight="SemiBold" Foreground="#cc0000"/>
                        <TextBlock x:Name="CurrentDashaDates" Text="-" FontSize="12" Foreground="#666" Margin="0,2,0,0"/>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Levels: " Foreground="#666" FontSize="11"/>
                            <TextBlock x:Name="CurrentDashaLevels" Text="-" Foreground="#333" FontSize="11" FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Dasha Tree View -->
                <Border Grid.Row="1" Background="#fffff8" CornerRadius="5" Padding="5" BorderBrush="#ddd" BorderThickness="1">
                    <TreeView x:Name="DashaTreeView" BorderThickness="0" Background="Transparent">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding SubPeriods}">
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" Foreground="#333"/>
                                    <TextBlock Text=" (" Foreground="#888"/>
                                    <TextBlock Text="{Binding ShortDateRange}" Foreground="#666" FontSize="11"/>
                                    <TextBlock Text=")" Foreground="#888"/>
                                    <TextBlock Text=" â–¶ Current" Foreground="#cc0000" FontWeight="Bold" FontSize="11" Margin="5,0,0,0"
                                               Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="{Binding IsActive}"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                    </TreeView>
                </Border>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>
