<UserControl x:Class="JamakolAstrology.Controls.SideChartsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:JamakolAstrology.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Rasi Chart -->
        <Border Grid.Row="0" Background="#fffff8" CornerRadius="3" Padding="5" Margin="0,0,5,5" BorderBrush="#ddd" BorderThickness="1">
            <Grid>
                <controls:SouthIndianChart x:Name="ChartControl"/>
                <controls:NorthIndianChart x:Name="ChartControlNI" Visibility="Collapsed"/>
            </Grid>
        </Border>

        <!-- Navamsa Chart -->
        <Border Grid.Row="1" Background="#fffff8" CornerRadius="3" Padding="5" Margin="0,5,5,0" BorderBrush="#ddd" BorderThickness="1">
            <Grid>
                <controls:SouthIndianChart x:Name="NavamsaChartControl"/>
                <controls:NorthIndianChart x:Name="NavamsaChartControlNI" Visibility="Collapsed"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
