<UserControl x:Class="JamakolAstrology.Controls.KPDetailsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JamakolAstrology.Controls"
             xmlns:res="clr-namespace:JamakolAstrology.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <TabControl>
            <TabItem Header="Birth Sub Table">
                <DataGrid x:Name="KPGrid" 
                          Style="{StaticResource DataGridStyle}"
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          CanUserSortColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column" 
                          BorderThickness="0">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#cc0000"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="6,4"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="10"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Body/Cusp" Binding="{Binding Name, Converter={StaticResource PlanetNameConverter}}" Width="Auto"/>
                        <DataGridTextColumn Header="Nakshatra Lord" Binding="{Binding StarLord, Converter={StaticResource PlanetNameConverter}}" Width="Auto"/>
                        <DataGridTextColumn Header="Sub Lord" Binding="{Binding SubLord, Converter={StaticResource PlanetNameConverter}}" Width="Auto" FontWeight="Bold" Foreground="#cc0000"/>
                        <DataGridTextColumn Header="Prati-Sub" Binding="{Binding SubSubLord, Converter={StaticResource PlanetNameConverter}}" Width="Auto"/>
                        <DataGridTextColumn Header="Sookshma" Binding="{Binding SookshmaLord, Converter={StaticResource PlanetNameConverter}}" Width="Auto"/>
                        <DataGridTextColumn Header="Prana" Binding="{Binding PranaLord, Converter={StaticResource PlanetNameConverter}}" Width="Auto"/>
                        <DataGridTextColumn Header="Deha" Binding="{Binding DehaLord, Converter={StaticResource PlanetNameConverter}}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Transit Sub">
                <Grid Background="#FFFFFF">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                        <TextBlock Text="Start:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <DatePicker x:Name="StartDatePicker" Width="100"/>
                        <!-- Simple Time Input placeholder or fixed to 00:00 for now, could expand later -->
                        
                        <TextBlock Text="End:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                        <DatePicker x:Name="EndDatePicker" Width="100"/>
                        
                        <TextBlock Text="Body:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                        <ComboBox x:Name="BodySelector" Width="100" SelectedIndex="0"/>
                        
                        <Button x:Name="CalculateTransitBtn" Content="Calculate" Margin="15,0,0,0" Padding="10,2" Click="CalculateTransitBtn_Click"/>
                        
                        <TextBlock x:Name="TransitStatusText" Text="" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="Gray"/>
                    </StackPanel>

                    <DataGrid x:Name="TransitGrid" Grid.Row="1"
                              Style="{StaticResource DataGridStyle}"
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False" 
                              CanUserSortColumns="True"
                              IsReadOnly="True"
                              HeadersVisibility="Column" 
                              BorderThickness="0">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="6,4"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="10"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date/Time" Binding="{Binding DisplayTime}" Width="Auto"/>
                            <DataGridTextColumn Header="Body" Binding="{Binding Body}" Width="Auto" FontWeight="Bold"/>
                             <DataGridTextColumn Header="Old Sub" Binding="{Binding OldSubLord}" Width="Auto" Foreground="Gray"/>
                            <DataGridTemplateColumn Header="" Width="20">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="âž¡" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="New Sub" Binding="{Binding NewSubLord}" Width="Auto" FontWeight="Bold" Foreground="#cc0000"/>
                            <DataGridTextColumn Header="Sign" Binding="{Binding Sign}" Width="Auto"/>
                            <DataGridTextColumn Header="Star" Binding="{Binding Star}" Width="Auto"/>
                            <DataGridTemplateColumn Header="" Width="30">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="ðŸ“Š" ToolTip="Load Chart at This Time" 
                                                Click="LoadChartButton_Click" 
                                                Background="Transparent" BorderThickness="0" 
                                                Cursor="Hand" FontSize="14" Padding="2"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
