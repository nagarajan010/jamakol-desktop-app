<Window x:Class="JamakolAstrology.Controls.PlaceSearchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:JamakolAstrology.Resources"
        Title="{x:Static res:Strings.DialogPlaceSearch}" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#fffff0">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#cc0000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="SearchInput" Margin="0,0,10,0" Padding="5" FontSize="14" KeyDown="SearchInput_KeyDown"/>
            <Button x:Name="SearchButton" Grid.Column="1" Content="{x:Static res:Strings.BtnSearchText}" Click="SearchButton_Click"/>
        </Grid>

        <!-- Results List -->
        <ListView x:Name="ResultsList" Grid.Row="1" Background="White" BorderBrush="#ccc" BorderThickness="1" 
                  SelectionChanged="ResultsList_SelectionChanged" MouseDoubleClick="ResultsList_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="State/Region" Width="100" DisplayMemberBinding="{Binding AdminName1}"/>
                    <GridViewColumn Header="Country" Width="60" DisplayMemberBinding="{Binding CountryName}"/>
                    <GridViewColumn Header="Lat" Width="60" DisplayMemberBinding="{Binding Lat}"/>
                    <GridViewColumn Header="Lng" Width="60" DisplayMemberBinding="{Binding Lng}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <TextBlock x:Name="StatusText" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#666" FontStyle="Italic"/>
            <Button Content="{x:Static res:Strings.BtnCancel}" Background="#999" Click="CancelButton_Click" Margin="0,0,10,0"/>
            <Button Content="{x:Static res:Strings.BtnSelect}" Click="SelectButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
