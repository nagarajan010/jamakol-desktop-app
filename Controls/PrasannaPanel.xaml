<UserControl x:Class="JamakolAstrology.Controls.PrasannaPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:res="clr-namespace:JamakolAstrology.Resources">
    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Border Background="#ffebe0" BorderBrush="#ff9966" BorderThickness="1" CornerRadius="5" Padding="10">
        <StackPanel>
            <TextBlock Text="{x:Static res:Strings.PrasannaTitle}" FontSize="14" FontWeight="Bold" 
                       Foreground="#ff6600" Margin="0,0,0,10"/>
            
            <!-- Planet towards Udhayam -->
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static res:Strings.LabelPlanetTowardsUdhayam}" Style="{StaticResource LabelStyle}"/>
                <TextBlock x:Name="PlanetTowardsUdhayamText" Grid.Column="1" Text="-" Foreground="#ff6600" FontWeight="SemiBold" FontSize="11"/>
            </Grid>
            
            <!-- Udhayam Lord & Bhava -->
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static res:Strings.LabelUdhayamLordBhava}" Style="{StaticResource LabelStyle}"/>
                <TextBlock x:Name="UdhayamLordBhavaText" Grid.Column="1" Text="-" Foreground="#ff6600" FontWeight="SemiBold" FontSize="11"/>
            </Grid>
            
            <!-- Arudam Bhava -->
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static res:Strings.LabelArudamBhava}" Style="{StaticResource LabelStyle}"/>
                <TextBlock x:Name="ArudamBhavaText" Grid.Column="1" Text="-" Foreground="#ff6600" FontWeight="SemiBold" FontSize="11"/>
            </Grid>
            
            <!-- Planet towards Arudam -->
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static res:Strings.LabelPlanetTowardsArudam}" Style="{StaticResource LabelStyle}"/>
                <TextBlock x:Name="PlanetTowardsArudamText" Grid.Column="1" Text="-" Foreground="#ff6600" FontWeight="SemiBold" FontSize="11"/>
            </Grid>
            
            <!-- Planet towards Kavippu -->
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static res:Strings.LabelPlanetTowardsKavippu}" Style="{StaticResource LabelStyle}"/>
                <TextBlock x:Name="PlanetTowardsKavippuText" Grid.Column="1" Text="-" Foreground="#ff6600" FontWeight="SemiBold" FontSize="11"/>
            </Grid>
            
            <!-- Bhava in Kavippu -->
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static res:Strings.LabelBhavaInKavippu}" Style="{StaticResource LabelStyle}"/>
                <TextBlock x:Name="BhavaInKavippuText" Grid.Column="1" Text="-" Foreground="#ff6600" FontWeight="SemiBold" FontSize="11"/>
            </Grid>
            
            <!-- Exalted Planets -->
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static res:Strings.LabelExaltedPlanets}" Style="{StaticResource LabelStyle}"/>
                <TextBlock x:Name="ExaltedPlanetsText" Grid.Column="1" Text="-" Foreground="#ff6600" FontWeight="SemiBold" FontSize="11"/>
            </Grid>
            
            <!-- Debilitated Planets -->
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static res:Strings.LabelDebilitatedPlanets}" Style="{StaticResource LabelStyle}"/>
                <TextBlock x:Name="DebilitatedPlanetsText" Grid.Column="1" Text="-" Foreground="#ff6600" FontWeight="SemiBold" FontSize="11"/>
            </Grid>
            
            <!-- Parivarthana Planets -->
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static res:Strings.LabelParivarthanaPlanets}" Style="{StaticResource LabelStyle}"/>
                <TextBlock x:Name="ParivarthanaPlanetsText" Grid.Column="1" Text="-" Foreground="#ff6600" FontWeight="SemiBold" FontSize="11"/>
            </Grid>
            
            <!-- Planet → Emakandam -->
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static res:Strings.LabelPlanetTowardsEmakandam}" Style="{StaticResource LabelStyle}"/>
                <TextBlock x:Name="EmakandamText" Grid.Column="1" Text="-" Foreground="#ff6600" FontWeight="SemiBold" FontSize="11"/>
            </Grid>
            
            <!-- Planet → Rahu Time -->
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static res:Strings.LabelPlanetInRahuTime}" Style="{StaticResource LabelStyle}"/>
                <TextBlock x:Name="RahuTimeText" Grid.Column="1" Text="-" Foreground="#ff6600" FontWeight="SemiBold" FontSize="11"/>
            </Grid>
            
            <!-- Planet → Mrithyu -->
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static res:Strings.LabelPlanetTowardsMrithyu}" Style="{StaticResource LabelStyle}"/>
                <TextBlock x:Name="MrithyuText" Grid.Column="1" Text="-" Foreground="#ff6600" FontWeight="SemiBold" FontSize="11"/>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
