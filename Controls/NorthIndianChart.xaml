<UserControl x:Class="JamakolAstrology.Controls.NorthIndianChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400"
             Background="#fffff0"
             PreviewMouseWheel="Control_PreviewMouseWheel">
    <UserControl.Resources>
        <Style x:Key="SignNumberStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#cc0000"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="PlanetTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#000"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="MainGrid" Margin="2" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title -->
            <RowDefinition Height="*"/>    <!-- Chart -->
        </Grid.RowDefinitions>
        
        <!-- Chart Title (Outside Chart) -->
        <TextBlock x:Name="ChartTitle" Text="Rasi" Grid.Row="0" FontWeight="Bold" Foreground="#cc0000" FontSize="14" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,5"/>

        <!-- Chart Content -->
        <Grid Grid.Row="1">
            <!-- Diamond Chart Layout using Geometry/Path -->
            <Canvas x:Name="ChartCanvas" SizeChanged="ChartCanvas_SizeChanged">
                 <Path x:Name="ChartLines" Stroke="#cc0000" StrokeThickness="1.5" />
                 <Path x:Name="ChartBorder" Stroke="#cc0000" StrokeThickness="2" />
            </Canvas>
    
            <Viewbox Stretch="Fill">
                <Grid Width="400" Height="400">
                    <!-- Chart Outline -->
                    <Path Data="M 2,2 L 398,2 L 398,398 L 2,398 Z" Stroke="#cc0000" StrokeThickness="2"/>
                    <Path Data="M 2,2 L 398,398 M 398,2 L 2,398" Stroke="#cc0000" StrokeThickness="2"/>
                    <Path Data="M 200,2 L 398,200 L 200,398 L 2,200 Z" Stroke="#cc0000" StrokeThickness="2"/>
                    
                    <!-- H1 (Lagna): Top Center -->
                    <Grid x:Name="H1" Width="120" Height="80" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,60,0,0">
                         <TextBlock x:Name="H1Sign" Text="1" Style="{StaticResource SignNumberStyle}" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                         <TextBlock x:Name="H1Planets" Text="" Style="{StaticResource PlanetTextStyle}" Margin="0,15,0,0"/>
                         <TextBlock x:Name="H1Aprakash" Text="" Style="{StaticResource PlanetTextStyle}" FontSize="9" Foreground="Gray" VerticalAlignment="Bottom"/>
                    </Grid>
    
                    <!-- H2: Top Left -->
                    <Grid x:Name="H2" Width="80" Height="60" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="60,20,0,0">
                         <TextBlock x:Name="H2Sign" Text="2" Style="{StaticResource SignNumberStyle}" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                         <TextBlock x:Name="H2Planets" Text="" Style="{StaticResource PlanetTextStyle}" Margin="0,15,0,0"/>
                         <TextBlock x:Name="H2Aprakash" Text="" Style="{StaticResource PlanetTextStyle}" FontSize="9" Foreground="Gray" VerticalAlignment="Bottom"/>
                    </Grid>
                    
                    <!-- H3: Top Left (Lower) -->
                    <Grid x:Name="H3" Width="60" Height="80" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,60,0,0">
                         <TextBlock x:Name="H3Sign" Text="3" Style="{StaticResource SignNumberStyle}" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                         <TextBlock x:Name="H3Planets" Text="" Style="{StaticResource PlanetTextStyle}" Margin="0,15,0,0"/>
                         <TextBlock x:Name="H3Aprakash" Text="" Style="{StaticResource PlanetTextStyle}" FontSize="9" Foreground="Gray" VerticalAlignment="Bottom"/>
                    </Grid>
    
                    <!-- H4: Left Center -->
                    <Grid x:Name="H4" Width="80" Height="120" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="60,0,0,0">
                         <TextBlock x:Name="H4Sign" Text="4" Style="{StaticResource SignNumberStyle}" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                         <TextBlock x:Name="H4Planets" Text="" Style="{StaticResource PlanetTextStyle}" Margin="0,15,0,0"/>
                         <TextBlock x:Name="H4Aprakash" Text="" Style="{StaticResource PlanetTextStyle}" FontSize="9" Foreground="Gray" VerticalAlignment="Bottom"/>
                    </Grid>
    
                    <!-- H5: Bottom Left (Upper) -->
                    <Grid x:Name="H5" Width="60" Height="80" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,60">
                         <TextBlock x:Name="H5Sign" Text="5" Style="{StaticResource SignNumberStyle}" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                         <TextBlock x:Name="H5Planets" Text="" Style="{StaticResource PlanetTextStyle}" Margin="0,15,0,0"/>
                         <TextBlock x:Name="H5Aprakash" Text="" Style="{StaticResource PlanetTextStyle}" FontSize="9" Foreground="Gray" VerticalAlignment="Bottom"/>
                    </Grid>
    
                    <!-- H6: Bottom Left -->
                    <Grid x:Name="H6" Width="80" Height="60" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="60,0,0,20">
                         <TextBlock x:Name="H6Sign" Text="6" Style="{StaticResource SignNumberStyle}" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                         <TextBlock x:Name="H6Planets" Text="" Style="{StaticResource PlanetTextStyle}" Margin="0,15,0,0"/>
                         <TextBlock x:Name="H6Aprakash" Text="" Style="{StaticResource PlanetTextStyle}" FontSize="9" Foreground="Gray" VerticalAlignment="Bottom"/>
                    </Grid>
    
                    <!-- H7: Bottom Center -->
                    <Grid x:Name="H7" Width="120" Height="80" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,60">
                         <TextBlock x:Name="H7Sign" Text="7" Style="{StaticResource SignNumberStyle}" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                         <TextBlock x:Name="H7Planets" Text="" Style="{StaticResource PlanetTextStyle}" Margin="0,15,0,0"/>
                         <TextBlock x:Name="H7Aprakash" Text="" Style="{StaticResource PlanetTextStyle}" FontSize="9" Foreground="Gray" VerticalAlignment="Bottom"/>
                    </Grid>
    
                    <!-- H8: Bottom Right -->
                    <Grid x:Name="H8" Width="80" Height="60" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,60,20">
                         <TextBlock x:Name="H8Sign" Text="8" Style="{StaticResource SignNumberStyle}" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                         <TextBlock x:Name="H8Planets" Text="" Style="{StaticResource PlanetTextStyle}" Margin="0,15,0,0"/>
                         <TextBlock x:Name="H8Aprakash" Text="" Style="{StaticResource PlanetTextStyle}" FontSize="9" Foreground="Gray" VerticalAlignment="Bottom"/>
                    </Grid>
    
                    <!-- H9: Bottom Right (Upper) -->
                    <Grid x:Name="H9" Width="60" Height="80" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,60">
                         <TextBlock x:Name="H9Sign" Text="9" Style="{StaticResource SignNumberStyle}" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                         <TextBlock x:Name="H9Planets" Text="" Style="{StaticResource PlanetTextStyle}" Margin="0,15,0,0"/>
                         <TextBlock x:Name="H9Aprakash" Text="" Style="{StaticResource PlanetTextStyle}" FontSize="9" Foreground="Gray" VerticalAlignment="Bottom"/>
                    </Grid>
    
                    <!-- H10: Right Center -->
                    <Grid x:Name="H10" Width="80" Height="120" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,60,0">
                         <TextBlock x:Name="H10Sign" Text="10" Style="{StaticResource SignNumberStyle}" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                         <TextBlock x:Name="H10Planets" Text="" Style="{StaticResource PlanetTextStyle}" Margin="0,15,0,0"/>
                         <TextBlock x:Name="H10Aprakash" Text="" Style="{StaticResource PlanetTextStyle}" FontSize="9" Foreground="Gray" VerticalAlignment="Bottom"/>
                    </Grid>
    
                    <!-- H11: Top Right (Lower) -->
                    <Grid x:Name="H11" Width="60" Height="80" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,60,20,0">
                         <TextBlock x:Name="H11Sign" Text="11" Style="{StaticResource SignNumberStyle}" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                         <TextBlock x:Name="H11Planets" Text="" Style="{StaticResource PlanetTextStyle}" Margin="0,15,0,0"/>
                         <TextBlock x:Name="H11Aprakash" Text="" Style="{StaticResource PlanetTextStyle}" FontSize="9" Foreground="Gray" VerticalAlignment="Bottom"/>
                    </Grid>
    
                    <!-- H12: Top Right -->
                    <Grid x:Name="H12" Width="80" Height="60" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,20,60,0">
                         <TextBlock x:Name="H12Sign" Text="12" Style="{StaticResource SignNumberStyle}" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                         <TextBlock x:Name="H12Planets" Text="" Style="{StaticResource PlanetTextStyle}" Margin="0,15,0,0"/>
                         <TextBlock x:Name="H12Aprakash" Text="" Style="{StaticResource PlanetTextStyle}" FontSize="9" Foreground="Gray" VerticalAlignment="Bottom"/>
                    </Grid>
                </Grid>
            </Viewbox>
        </Grid>
        
        <!-- Context Menu on Main Grid -->
        <Grid.ContextMenu>
            <ContextMenu x:Name="DivisionContextMenu">
                <MenuItem Header="Rasi (D-1)" Tag="1" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Hora (D-2)" Tag="2" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Drekkana (D-3)" Tag="3" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Chaturthamsa (D-4)" Tag="4" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Panchamsa (D-5)" Tag="5" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Shashthamsa (D-6)" Tag="6" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Saptamsa (D-7)" Tag="7" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Ashtamsa (D-8)" Tag="8" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Navamsa (D-9)" Tag="9" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Dasamsa (D-10)" Tag="10" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Rudramsa (D-11)" Tag="11" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Dwadasamsa (D-12)" Tag="12" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Shodasamsa (D-16)" Tag="16" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Vimsamsa (D-20)" Tag="20" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Siddhamsa (D-24)" Tag="24" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Nakshatramsa (D-27)" Tag="27" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Trimsamsa (D-30)" Tag="30" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Khavedamsa (D-40)" Tag="40" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Akshavedamsa (D-45)" Tag="45" Click="DivisionMenuItem_Click"/>
                <MenuItem Header="Shashtiamsa (D-60)" Tag="60" Click="DivisionMenuItem_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</UserControl>
