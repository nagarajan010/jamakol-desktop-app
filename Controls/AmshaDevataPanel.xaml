<UserControl x:Class="JamakolAstrology.Controls.AmshaDevataPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:res="clr-namespace:JamakolAstrology.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#f0f0f0" Padding="10,5" BorderBrush="#ccc" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{x:Static res:Strings.LabelCurrentVarga}" FontWeight="Bold" VerticalAlignment="Center" Foreground="#333"/>
                <TextBlock x:Name="VargaNameText" Text="Navamsa (D-9)" FontWeight="SemiBold" Foreground="#cc0000" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <TextBlock Text="{x:Static res:Strings.HintRightClick}" FontStyle="Italic" Foreground="#666" FontSize="11" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <DataGrid x:Name="DevataGrid" Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  CanUserSortColumns="False"
                  IsReadOnly="True" 
                  HeadersVisibility="Column" 
                  BorderThickness="0"
                  Style="{StaticResource DataGridStyle}">
            <DataGrid.ContextMenu>
                <ContextMenu x:Name="VargaContextMenu">
                    <!-- Items populated in code-behind -->
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#cc0000"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="6,4"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="10"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Body" Binding="{Binding PlanetName, Converter={StaticResource PlanetNameConverter}}" Width="Auto"/>
                <DataGridTextColumn Header="Division" Binding="{Binding DivisionSign, Converter={StaticResource SignNameConverter}}" Width="Auto"/>
                <DataGridTextColumn Header="Index" Binding="{Binding Index}" Width="Auto"/>
                <DataGridTextColumn x:Name="DeityColumn" Header="In whose amsa" Binding="{Binding Deity}" Width="Auto" FontWeight="Bold" Foreground="#cc0000"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

