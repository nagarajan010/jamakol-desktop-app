<UserControl x:Class="JamakolAstrology.Controls.JamakolDataGridsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:JamakolAstrology.Controls">

    <TabControl Margin="0,5,0,5" Background="Transparent" BorderThickness="0">
        <TabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border x:Name="Border" Background="#f0f0f0" BorderBrush="#ccc" 
                                    BorderThickness="1,1,1,0" CornerRadius="4,4,0,0" Padding="12,6" Margin="0,0,2,0">
                                <ContentPresenter ContentSource="Header"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#cc0000"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="False">
                                    <Setter Property="Foreground" Value="#333"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
        </TabControl.Resources>
        
        <!-- Tab 1: Jama Graha Positions -->
        <TabItem Header="Jama Graha Positions">
            <Border Background="White" BorderBrush="#ddd" BorderThickness="1" Padding="5">
                <local:JamaGrahaGrid x:Name="JamaGrahaGridControl"/>
            </Border>
        </TabItem>

        <!-- Tab 2: Planetary Positions -->
        <TabItem Header="Planetary Positions">
            <Border Background="White" BorderBrush="#ddd" BorderThickness="1" Padding="5">
                <local:JamakolPlanetGrid x:Name="PlanetGridControl"/>
            </Border>
        </TabItem>
    </TabControl>
</UserControl>
