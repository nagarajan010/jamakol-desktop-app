<UserControl x:Class="JamakolAstrology.Controls.BirthInputPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Border Style="{StaticResource InputPanelStyle}">
        <WrapPanel VerticalAlignment="Center">
            <TextBlock Text="Name:" Style="{StaticResource TopLabelStyle}"/>
            <TextBox x:Name="NameInput" Style="{StaticResource TopInputStyle}" Width="120" Text="Sample Person"/>

            <TextBlock Text="Date:" Style="{StaticResource TopLabelStyle}"/>
            <DatePicker x:Name="DateInput" Style="{StaticResource DatePickerStyle}" Width="120"
                        SelectedDate="{x:Static sys:DateTime.Now}"/>

            <TextBlock Text="Time:" Style="{StaticResource TopLabelStyle}"/>
            <TextBox x:Name="TimeInput" Style="{StaticResource TopInputStyle}" Width="70" Text="12:00:00"/>

            <TextBlock Text="Location:" Style="{StaticResource TopLabelStyle}"/>
            <Grid>
                <TextBox x:Name="LocationInput" Style="{StaticResource TopInputStyle}" Width="110" Text="Chennai"
                         TextChanged="LocationInput_TextChanged" PreviewKeyDown="LocationInput_PreviewKeyDown"/>
                <Popup x:Name="SuggestionsPopup" PlacementTarget="{Binding ElementName=LocationInput}" 
                       StaysOpen="False" IsOpen="False" AllowsTransparency="True" PopupAnimation="Slide">
                    <Border Background="White" BorderBrush="#ccc" BorderThickness="1" CornerRadius="3" MaxHeight="200" MinWidth="200">
                        <ListBox x:Name="SuggestionsList" BorderThickness="0" Background="Transparent"
                                 PreviewKeyDown="SuggestionsList_PreviewKeyDown"
                                 MouseDoubleClick="SuggestionsList_MouseDoubleClick">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Margin="2">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding DisplayName}" FontSize="10" Foreground="#666"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Popup>
            </Grid>
            <Button Content="ðŸ”" Width="25" Height="25" Click="SearchButton_Click" ToolTip="Search City" 
                    Background="Transparent" Foreground="#555" BorderBrush="#ccc" BorderThickness="1" Margin="2,0,5,0"/>

            <TextBlock Text="Lat:" Style="{StaticResource TopLabelStyle}"/>
            <TextBox x:Name="LatitudeInput" Style="{StaticResource TopInputStyle}" Width="65" Text="13.0827"/>

            <TextBlock Text="Long:" Style="{StaticResource TopLabelStyle}"/>
            <TextBox x:Name="LongitudeInput" Style="{StaticResource TopInputStyle}" Width="65" Text="80.2707"/>

            <TextBlock Text="TZ:" Style="{StaticResource TopLabelStyle}"/>
            <TextBox x:Name="TimezoneInput" Style="{StaticResource TopInputStyle}" Width="45" Text="5.5"/>

            <Button x:Name="CalculateButton" Content="Calculate" 
                    Style="{StaticResource ButtonStyle}" 
                    Click="CalculateButton_Click"
                    Margin="15,0,0,0"/>
            
            <Button Content="ðŸ’¾ Save" Click="SaveButton_Click"
                    Margin="5,0,0,0" Padding="10,8"
                    Background="#28A745" Foreground="White" 
                    FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" FontSize="13"/>
            
            <Button Content="ðŸ“‹ Saved" Click="LoadButton_Click"
                    Margin="5,0,0,0" Padding="10,8"
                    Background="#4A90D9" Foreground="White" 
                    FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" FontSize="13"/>

            <TextBlock x:Name="StatusText" Text="" Foreground="#888" 
                       FontSize="11" Margin="15,0,0,0" VerticalAlignment="Center"/>
        </WrapPanel>
    </Border>
</UserControl>
