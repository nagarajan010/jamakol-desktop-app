<UserControl x:Class="JamakolAstrology.Controls.BirthInputPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:res="clr-namespace:JamakolAstrology.Resources">
    <Border Style="{StaticResource InputPanelStyle}">
        <WrapPanel VerticalAlignment="Center">
            <TextBlock Text="{x:Static res:Strings.LabelName}" Style="{StaticResource TopLabelStyle}"/>
            <TextBox x:Name="NameInput" Style="{StaticResource TopInputStyle}" Width="120" Text="Person"/>

            <TextBlock Text="{x:Static res:Strings.LabelYear}" Style="{StaticResource TopLabelStyle}"/>
            <TextBox x:Name="YearInput" Style="{StaticResource TopInputStyle}" Width="55" Text="2024" ToolTip="{x:Static res:Strings.TooltipYear}"/>
            <TextBlock Text="/" Margin="2,0" VerticalAlignment="Center" Foreground="#666"/>
            <TextBox x:Name="MonthInput" Style="{StaticResource TopInputStyle}" Width="30" Text="12" ToolTip="{x:Static res:Strings.TooltipMonth}"/>
            <TextBlock Text="/" Margin="2,0" VerticalAlignment="Center" Foreground="#666"/>
            <TextBox x:Name="DayInput" Style="{StaticResource TopInputStyle}" Width="30" Text="27" ToolTip="{x:Static res:Strings.TooltipDay}"/>

            <TextBlock Text="{x:Static res:Strings.LabelTime}" Style="{StaticResource TopLabelStyle}"/>
            <TextBox x:Name="TimeInput" Style="{StaticResource TopInputStyle}" Width="70" Text="12:00:00"/>
            <Button Content="{x:Static res:Strings.BtnNow}" Width="Auto" MinWidth="30" Height="20" Click="NowButton_Click" 
                     Margin="5,0,0,0" Padding="5,0" FontSize="10"
                     Background="#E0E0E0" Foreground="Black" 
                     BorderBrush="#999" BorderThickness="1"/>

            <TextBlock Text="{x:Static res:Strings.LabelLocation}" Style="{StaticResource TopLabelStyle}"/>
            <Grid>
                <TextBox x:Name="LocationInput" Style="{StaticResource TopInputStyle}" Width="110" Text="Chennai"
                         TextChanged="LocationInput_TextChanged" PreviewKeyDown="LocationInput_PreviewKeyDown"/>
                <Popup x:Name="SuggestionsPopup" PlacementTarget="{Binding ElementName=LocationInput}" 
                       StaysOpen="False" IsOpen="False" AllowsTransparency="True" PopupAnimation="Slide">
                    <Border Background="White" BorderBrush="#ccc" BorderThickness="1" CornerRadius="3" MaxHeight="200" MinWidth="200">
                        <ListBox x:Name="SuggestionsList" BorderThickness="0" Background="Transparent"
                                 PreviewKeyDown="SuggestionsList_PreviewKeyDown"
                                 MouseDoubleClick="SuggestionsList_MouseDoubleClick">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Margin="2">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding DisplayName}" FontSize="10" Foreground="#666"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Popup>
            </Grid>
            <Button Content="{x:Static res:Strings.BtnSearch}" Width="25" Height="25" Click="SearchButton_Click" ToolTip="{x:Static res:Strings.TooltipSearchCity}" 
                    Background="Transparent" Foreground="#555" BorderBrush="#ccc" BorderThickness="1" Margin="2,0,5,0"/>

            <TextBlock Text="{x:Static res:Strings.LabelLat}" Style="{StaticResource TopLabelStyle}"/>
            <TextBox x:Name="LatitudeInput" Style="{StaticResource TopInputStyle}" Width="65" Text="13.0827"/>

            <TextBlock Text="{x:Static res:Strings.LabelLong}" Style="{StaticResource TopLabelStyle}"/>
            <TextBox x:Name="LongitudeInput" Style="{StaticResource TopInputStyle}" Width="65" Text="80.2707"/>

            <TextBlock Text="{x:Static res:Strings.LabelTZ}" Style="{StaticResource TopLabelStyle}"/>
            <TextBox x:Name="TimezoneInput" Style="{StaticResource TopInputStyle}" Width="45" Text="5.5"/>

            <Button x:Name="CalculateButton" Content="{x:Static res:Strings.BtnCalculate}" 
                    Style="{StaticResource ButtonStyle}" 
                    Click="CalculateButton_Click"
                    Margin="15,0,0,0"/>
            
            <Button Content="{x:Static res:Strings.BtnSave}" Click="SaveButton_Click"
                    Margin="5,0,0,0" Padding="10,8"
                    Background="#28A745" Foreground="White" 
                    FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" FontSize="13"/>
            
            <Button Content="{x:Static res:Strings.BtnSavedCharts}" Click="LoadButton_Click"
                    Margin="5,0,0,0" Padding="10,8"
                    Background="#4A90D9" Foreground="White" 
                    FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" FontSize="13"/>
            
            <CheckBox x:Name="HideDegreesCheckBox" Content="{x:Static res:Strings.ChkHideDegrees}" 
                      VerticalAlignment="Center" Margin="15,0,0,0" IsChecked="True"
                      Checked="HideDegreesCheckBox_Changed" Unchecked="HideDegreesCheckBox_Changed"/>

            <TextBlock x:Name="StatusText" Text="" Foreground="#888" 
                       FontSize="11" Margin="15,0,0,0" VerticalAlignment="Center"/>
        </WrapPanel>
    </Border>
</UserControl>
