<Window x:Class="JamakolAstrology.SavedChartsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:JamakolAstrology.Resources"
        Title="{x:Static res:Strings.DialogSavedCharts}"
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#fffff0">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="{x:Static res:Strings.HeaderSavedCharts}" FontSize="18" FontWeight="Bold" 
                   Foreground="#cc0000" Margin="0,0,0,15"/>
        
        <!-- Charts List -->
        <DataGrid x:Name="ChartsGrid" Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#eee"
                  Background="#fffff8"
                  RowBackground="#fffff8"
                  AlternatingRowBackground="#fff8dc"
                  SelectionChanged="ChartsGrid_SelectionChanged">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#cc0000"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="8,5"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="{x:Static res:Strings.HeaderName}" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="{x:Static res:Strings.HeaderDateTime}" Binding="{Binding DateTimeDisplay}" Width="130"/>
                <DataGridTextColumn x:Name="ResultColumn" Header="{x:Static res:Strings.HeaderResult}" Binding="{Binding Result}" Width="70"/>
                <DataGridTextColumn Header="{x:Static res:Strings.HeaderCategory}" Binding="{Binding CategoryName}" Width="100"/>
                <DataGridTextColumn Header="{x:Static res:Strings.HeaderPrediction}" Binding="{Binding PredictionPreview}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="LoadBtn" Content="{x:Static res:Strings.BtnLoadChart}" Padding="15,8" Margin="0,0,10,0"
                    Click="Load_Click" Background="#28A745" Foreground="White" 
                    FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" IsEnabled="False"/>
            <Button x:Name="EditBtn" Content="{x:Static res:Strings.BtnEdit}" Padding="15,8" Margin="0,0,10,0"
                    Click="Edit_Click" Background="#4A90D9" Foreground="White" 
                    FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" IsEnabled="False"/>
            <Button x:Name="DeleteBtn" Content="{x:Static res:Strings.BtnDelete}" Padding="15,8" Margin="0,0,10,0"
                    Click="Delete_Click" Background="#dc3545" Foreground="White" 
                    FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" IsEnabled="False"/>
            <Button Content="{x:Static res:Strings.BtnClose}" Padding="15,8" Click="Close_Click" Background="#666" Foreground="White"
                    FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>

