<Window x:Class="JamakolAstrology.SavedChartsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Saved Jamakol Charts"
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#fffff0">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="ðŸ“‹ Your Saved Charts" FontSize="18" FontWeight="Bold" 
                   Foreground="#cc0000" Margin="0,0,0,15"/>
        
        <!-- Charts List -->
        <DataGrid x:Name="ChartsGrid" Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#eee"
                  Background="#fffff8"
                  RowBackground="#fffff8"
                  AlternatingRowBackground="#fff8dc"
                  SelectionChanged="ChartsGrid_SelectionChanged">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#cc0000"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="8,5"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Date/Time" Binding="{Binding QueryDateTime, StringFormat='{}{0:dd-MM-yyyy HH:mm}'}" Width="130"/>
                <DataGridTextColumn x:Name="ResultColumn" Header="Result" Binding="{Binding Result}" Width="70"/>
                <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="100"/>
                <DataGridTextColumn Header="Prediction" Binding="{Binding PredictionPreview}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="LoadBtn" Content="ðŸ“¤ Load Chart" Padding="15,8" Margin="0,0,10,0"
                    Click="Load_Click" Background="#28A745" Foreground="White" 
                    FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" IsEnabled="False"/>
            <Button x:Name="EditBtn" Content="âœï¸ Edit" Padding="15,8" Margin="0,0,10,0"
                    Click="Edit_Click" Background="#4A90D9" Foreground="White" 
                    FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" IsEnabled="False"/>
            <Button x:Name="DeleteBtn" Content="ðŸ—‘ï¸ Delete" Padding="15,8" Margin="0,0,10,0"
                    Click="Delete_Click" Background="#dc3545" Foreground="White" 
                    FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" IsEnabled="False"/>
            <Button Content="Close" Padding="15,8" Click="Close_Click" Background="#666" Foreground="White"
                    FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
